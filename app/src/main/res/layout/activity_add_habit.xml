<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorBackground">

    <Button
        android:id="@+id/backButton"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/back"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:textColor="@color/colorOnPrimary"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/habitNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habit Name"
            android:background="@color/colorSurface"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/habitDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habit Description"
            android:background="@color/colorSurface"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/targetDaysEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target Days"
            android:background="@color/colorSurface"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:elevation="2dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/saveHabitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Habit"
            android:textColor="@color/colorOnPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:textStyle="bold"
            android:padding="12dp"
            android:drawableLeft="@drawable/save"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
